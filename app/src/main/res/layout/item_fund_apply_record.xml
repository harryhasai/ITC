<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="horizontal"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:contentDescription="image"
            android:src="@drawable/shape_fund_apply_record_line" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:contentDescription="image"
            android:src="@drawable/shape_fund_apply_record_oval" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:contentDescription="image"
            android:src="@drawable/shape_fund_apply_record_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-08-31" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_fund_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_status"
                android:text="基金标题"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_fund_apply_record_green"
                android:paddingBottom="3dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="3dp"
                android:text="审核状态"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_status"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_fund_apply_record_line1" />

            <TextView
                android:id="@+id/tv_examine_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_status"
                android:layout_marginTop="16dp"
                android:text="审核人: 叶秋"
                android:textColor="@color/black3"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_examine_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_status"
                android:layout_marginTop="16dp"
                android:text="审核时间: 2018-09-01"
                android:textColor="@color/black3"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_examine_time"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_fund_apply_record_line1" />

            <TextView
                android:id="@+id/tv_examine_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_examine_time"
                android:layout_marginTop="16dp"
                android:text="\u3000\u3000审核内容审核内容审核内容审核内容审核内容审核内容审核内容审核内容审核内容审核内容"
                android:textSize="13sp"
                android:textColor="@color/black5"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>