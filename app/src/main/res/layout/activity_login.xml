<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:contentDescription="back"
        android:padding="5dp"
        android:rotation="180"
        android:src="@drawable/ic_arrow_white48" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:background="@drawable/ic_login_bg_center"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_login_edit_bg"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_user40"
            android:elevation="2dp"
            android:hint="请输入您的账号"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/black3"
            android:textColorHint="@color/black5"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_login_edit_bg"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_pwd40"
            android:elevation="2dp"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black3"
            android:textColorHint="@color/black5"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/layer_login_button"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:text="忘记密码?"
        android:textColor="#ddffffff" />

</FrameLayout>