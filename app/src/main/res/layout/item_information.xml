<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:rtv="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <com.ruffian.library.RTextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:drawablePadding="10dp"
        android:background="@drawable/shape_black_line_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="园区"
        android:textColor="@color/black2"
        android:textSize="16sp"
        rtv:icon_direction="left"
        rtv:icon_height="20dp"
        rtv:icon_src_normal="@drawable/ic_information_yq"
        rtv:icon_width="20dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:overScrollMode="never" />

</LinearLayout>